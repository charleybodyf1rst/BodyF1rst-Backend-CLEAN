# BodyF1rst Backend API Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="BodyF1rst API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.bodyf1rst.net

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bodyf1rst
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_database_password

# =============================================================================
# CACHE & SESSION
# =============================================================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@bodyf1rst.com"

# =============================================================================
# AWS S3 (Required for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=bodyf1rst-storage

# =============================================================================
# STRIPE PAYMENT (Required)
# =============================================================================
STRIPE_KEY=pk_live_your_key
STRIPE_SECRET=sk_live_your_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# BROADCASTING & WEBSOCKETS (Real-time features)
# Laravel WebSockets package for real-time messaging, notifications, and presence
# =============================================================================
BROADCAST_DRIVER=pusher

# WebSocket Server Configuration (Laravel WebSockets)
PUSHER_APP_ID=bodyf1rst-production
PUSHER_APP_KEY=bodyf1rst-websocket-key
PUSHER_APP_SECRET=bodyf1rst-websocket-secret-prod-CHANGE-THIS
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=api.bodyf1rst.net
PUSHER_PORT=6001
PUSHER_SCHEME=https

# IMPORTANT: Change PUSHER_APP_SECRET to a secure random string in production!
# Generate with: openssl rand -base64 32

# =============================================================================
# ONESIGNAL (Push notifications)
# =============================================================================
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# =============================================================================
# API KEYS (Backend only - never expose in frontend)
# =============================================================================
OPENAI_API_KEY=
FATSECRET_CLIENT_ID=
FATSECRET_CLIENT_SECRET=
DID_API_KEY=

# =============================================================================
# PASSIO NUTRITION AI API (Required for nutrition features)
# Obtain API key from: https://www.passiolife.com/nutrition-ai
# =============================================================================
PASSIO_API_KEY=your_passio_api_key_here
PASSIO_BASE_URL=https://api.passiolife.com
PASSIO_TIMEOUT=15

# =============================================================================
# SECURITY CHECKLIST
# - APP_DEBUG must be false in production
# - Use strong, unique passwords
# - Rotate exposed API keys immediately
# - Enable Redis for cache/sessions
# - Configure SSL/HTTPS
# =============================================================================
